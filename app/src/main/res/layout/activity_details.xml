<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@color/pure_orange"
    tools:context=".DetailsActivity">

    <Button
        android:id="@+id/back_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="200dp"
        android:theme="@style/Button.Orange"
        android:text="@string/back_button"
        android:textSize="20sp"
        />
    <TextView

        android:id="@+id/pokemon_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="28sp"
        android:padding="20dp"
        android:background="@color/white"
        android:layout_marginTop="24dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:layout_marginVertical="24dp"
        android:paddingHorizontal="12dp"
        >

        <ImageView
            android:id="@+id/pokemon_image_view"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="24sp"
                android:text="@string/pokemon_weight"/>

            <TextView
                android:id="@+id/pokemon_weight_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"

                android:textSize="24sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="24sp"
                android:text="@string/pokemon_height"/>

            <TextView
                android:id="@+id/pokemon_height_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="24sp"
            android:text="@string/pokemon_type"/>
        <ListView
            android:id="@+id/pokemon_type_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/light_orange"
            android:dividerHeight="4dp"
            />
    </LinearLayout>
</LinearLayout>
